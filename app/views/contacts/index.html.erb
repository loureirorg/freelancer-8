<div class="container">
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Email</th>
      <th>Networks</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      <td>
        <% if contact.photo_link.present? %>
        <%= image_tag contact.photo_link, height: 50, width: 50 %>
        <% else %>
        <%= image_tag "no-profile-image.jpg", height: 50, width: 50 %>
        <% end %>
      </td>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <td>
        <% if contact.facebook_name.present? %>
        <span class="label label-primary">Facebook</span>
        <% end %>
        <% if contact.google_name.present? %>
        <span class="label label-danger">GMail</span>
        <% end %>
        <% if contact.linkedin_name.present? %>
        <span class="label label-info" style="background-color: #0077B5">Linkedin</span>
        <% end %>
        <% if contact.hotmail_name.present? %>
        <span class="label label-info" style="background-color: #0072C6">Hotmail</span>
        <% end %>
        <% if contact.yahoo_name.present? %>
        <span class="label label-info" style="background-color: #7B0099">Yahoo</span>
        <% end %>
        <% if contact.twitter_name.present? %>
        <span class="label label-info" style="background-color: #00aced">Twitter</span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>